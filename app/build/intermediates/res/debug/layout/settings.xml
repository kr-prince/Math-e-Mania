<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:textColor="#ff0000"
        android:text="Game Level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="40sp" >
    </TextView>

    <RadioGroup
        android:layout_marginTop="30dp"
        android:id="@+id/gamelevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:id="@+id/level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Easy  -  30s" />

        <RadioButton
            android:id="@+id/level2"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Normal  -  20s" />

        <RadioButton
            android:id="@+id/level3"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Hard  -  10s" />

    </RadioGroup>

    <Button
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Save"
        android:id="@+id/savebutton"
        android:layout_gravity="center_horizontal" />


</LinearLayout><!-- From: file:/C:/Users/Prince/AndroidStudioProjects/Math-e-Mania/app/src/main/res/layout/settings.xml -->